<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.PatientLoginFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.8"
        android:src="@drawable/welcome2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@+id/scrollView2"
        app:layout_anchorGravity="center">


        <TextView
            android:id="@+id/welcome_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:text="Welcome!"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_txt"
            android:layout_centerHorizontal="true"
            android:text=" Please enter your details \n             to help you"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/email_txtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_txt"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email_ett"
            android:layout_width="370dp"
            android:layout_height="55dp"
            android:layout_below="@+id/email_txtt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_email_icon"
            android:drawablePadding="12dp"
            android:hint="Enter your email"
            android:paddingLeft="15dp" />

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_ett"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/username_et"
            android:layout_width="370dp"
            android:layout_height="55dp"
            android:layout_below="@+id/username_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_input"
            android:hint="Enter your username"
            android:paddingLeft="15dp"
            android:drawableStart="@drawable/custom_person_icon"
            android:drawablePadding="12dp"/>

        <TextView
            android:id="@+id/password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_et"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/password_et"
            android:layout_width="370dp"
            android:layout_height="55dp"
            android:layout_below="@+id/password_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_lock_icon"
            android:drawablePadding="12dp"
            android:hint="Enter your Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp" />

        <Button
            android:id="@+id/Login_btn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_below="@id/password_et"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#6495ED"
            android:text="Login"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/newUser_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Login_btn"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="Are you a new user? "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/signUp_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Login_btn"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="50dp"
            android:layout_toRightOf="@+id/newUser_txt"
            android:clickable="true"
            android:text="Sign Up"
            android:textColor="#6495ED"
            android:textSize="16sp" />
    </RelativeLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>