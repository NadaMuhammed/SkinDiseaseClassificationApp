<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="20dp"
                android:text="Instructions"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:id="@+id/v"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/instructions"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"/>

            <ImageView
                android:id="@+id/closeupImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/v"
                android:src="@drawable/closeup" />

            <TextView
                android:id="@+id/closeupTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/closeupImg"
                android:fontFamily="sans-serif-medium"
                android:text="Photo : Close Up"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/closeupTxt"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/closeupImg"
                android:text="Please clearly center area of concern"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/scanImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/scanimg"
                android:layout_below="@+id/closeupImg"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/scanTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/scanImg"
                android:text="Scan : Click Scan Button"
                android:layout_below="@id/closeupImg"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our AI technology will scan your image to find the best possible disease, if there isn't any, it will tell you!"
                android:layout_below="@+id/scanTxt"
                android:layout_toRightOf="@+id/scanImg"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/addPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scanImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:text="Add photo"
                android:layout_marginBottom="30dp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>